<Window x:Class="wpfbuss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfbuss"
        mc:Ignorable="d"
        Title="登录" Height="350" Width="525">
    <Grid Background="#333">
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="用户名:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,10,0,0" Padding="5" Background="#555" Foreground="White" BorderBrush="#555"/>
            <Label Content="密码:" Foreground="White" FontSize="16" Margin="0,20,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,10,0,0" Padding="5" Background="#555" Foreground="White" BorderBrush="#555"/>
            <Button Content="登录" Background="#ff4081" Foreground="White" BorderBrush="#ff4081" Height="40" Margin="0,20,0,0" FontSize="16" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
